{
    "name": "vheissu/ci-twig",
    "description": "Twig templating integration for CodeIgniter 4",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "codeigniter",
        "codeigniter4",
        "twig",
        "template",
        "view",
        "templating"
    ],
    "authors": [
        {
            "name": "Dwayne Charrington",
            "homepage": "https://github.com/Vheissu"
        }
    ],
    "homepage": "https://github.com/Vheissu/Ci-Twig",
    "require": {
        "php": "^8.1",
        "twig/twig": "^3.22"
    },
    "require-dev": {
        "codeigniter4/framework": "^4.6",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Vheissu\\CiTwig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "pest",
        "analyse": "phpstan analyse src/"
    }
}
